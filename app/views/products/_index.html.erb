<div class="col-sm-3">
  <div class="single-item">
    <div class="single-item-header">
    <% if product.images.present? %>
      <%= link_to image_tag(Settings.URL_IMAGE+product.images.first.image),
        product_path(product) %>
    <% end %>
    </div>
    <div class="single-item-body">
      <p class="single-item-title"><%= product.name %></p>
      <p class="single-item-price">
        <span class="flash-del">$ <%= product.price %></span>
        <span class="flash-sale">$ <%= product.promotion_price %></span>
      </p>
    </div>
    <div class="single-item-caption">
      <a class="add-to-cart pull-left" href="shopping_cart.html"><i class="fa fa-shopping-cart"></i></a>
        <%= link_to t("products.details"), product_path(product), class: "beta-btn primary" %>
        <i class="fa fa-chevron-right"></i>
      <div class="clearfix"></div>
    </div>
  </div>
</div>

