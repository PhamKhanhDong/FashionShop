<div class="container">
  <div id="content">
    <div class="row">
      <div class="col-sm-9">
        <div class="row">
          <div class="col-sm-4">
            <%= link_to image_tag(Settings.URL_IMAGE+
              @product.images.first.image) %>
          </div>
          <div class="col-sm-8">
            <div class="single-item-body">
              <p class="single-item-title custom-name-product">
                <%= @product.name %></p>
              <p class="single-item-price">
                <span>$ <%= @product.promotion_price %> </span>
              </p>
            </div>
            <div class="clearfix"></div>
            <div class="space20">&nbsp;</div>
            <div class="single-item-desc">
              <p><%= @product.short_description %></p>
            </div>
            <div class="single-item-options">
              <%= link_to add_to_cart_path(@product), remote: true,
                method: :post, class: "add-to-cart" do %>
                <i class="fa fa-shopping-cart"></i>
              <% end %>
              <div class="clearfix"></div>
            </div>
          </div>
        </div>
        <div class="space40">&nbsp;</div>
        <div class="woocommerce-tabs">
          <ul class="tabs">
            <li><a href="#tab-description">
              <%= t "products.description" %></a>
            </li>
            <li><a href="#tab-reviews"><%= t "products.reviews" %></a></li>
          </ul>

          <div class="panel" id="tab-description">
            <p><%= @product.long_description %></p>
          </div>
          <div class="panel" id="tab-reviews">
            <p>No Reviews</p>
          </div>
        </div>
        <div class="space50">&nbsp;</div>
        <%= render partial: "index", collection: @new_product, as: :product %>
      </div>
      <%= render "products/product_right_column" %>
    </div>
  </div>
</div>
