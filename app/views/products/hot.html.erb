<div class="inner-header">
  <div class="container">
    <div class="pull-left">
      <h6 class="inner-title"><%= t ".hot_product" %></h6>
    </div>
    <div class="pull-right">
      <div class="beta-breadcrumb font-large">
        <%= link_to t(".home"), root_path %> /
        <span><%= t ".hot_product" %></span>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container">
  <div id="content">
    <div class="col-sm-12">
      <%= render(partial: "products/index", collection: @best_selling,
        as: :product) || t("products.no_product") %>
    </div>
    <div class="col-sm-12">
      <%= paginate @best_selling %>
    </div>
  </div>
</div>
