<% provide :title, t(".title") %>
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"><%= t ".title" %>
          <small><%= t ".list" %></small>
        </h1>
      </div>
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr align="center">
            <th><%= t ".email" %></th>
            <th><%= t ".product_name" %></th>
            <th><%= t ".content" %></th>
            <th><%= t ".star" %></th>
            <th><%= t ".approve" %></th>
            <th><%= t "admin.delete" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render partial: "admin/rates/list", collection: @rates,
            as: :rate %>
        </tbody>
      </table>
      <%= paginate @rates %>
    </div>
  </div>
</div>
