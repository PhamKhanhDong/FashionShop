<tr class="odd gradeX center">
  <td><%= product.name %></td>
  <td><%= product.quantity %></td>
  <td><%= product.category_name %></td>
  <td><%= product.brand_name %></td>
  <td>
    <%= check_box_tag "", product.active?, product.active?,
      class: "active_product active_product_#{product.id}",
      url: active_admin_product_path(product) %>
  </td>
  <td class="center">
    <i class="fa fa-pencil fa-fw"></i>
    <%= link_to t("admin.edit"), edit_admin_product_path(product) %>
  </td>
    <td class="center">
    <i class="fa fa-trash-o fa-fw"></i>
    <%= link_to t(".delete"), admin_product_path(product),
      method: :delete, data: {confirm: t(".you_sure")} %>
  </td>
</tr>
