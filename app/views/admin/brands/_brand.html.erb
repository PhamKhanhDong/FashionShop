<tr class="odd gradeX center">
  <td><%= index_for_list @brands, brand_counter %></td>
  <td><%= brand.name %></td>
  <td><%= brand.products.count %></td>
  <td class="center">
    <i class="fa fa-pencil fa-fw"></i>
    <%= link_to t("admin.edit"), edit_admin_brand_path(brand) %>
  </td>
  <td class="center">
    <i class="fa fa-trash-o fa-fw"></i>
    <%= link_to t("admin.delete"), admin_brand_path(brand),
     method: :delete, data: {confirm: t(".you_sure")}%>
  </td>
</tr>
