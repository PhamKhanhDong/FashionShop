<div class="container">
  <div id="content">
    <form action="#" method="post" class="beta-form-checkout">
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
          <h4><%= t "users.sign_up" %></h4>
          <div class="space20">&nbsp;</div>
          <div class="form-block">
            <label for="email"><%= t "users.email" %></label>
            <input type="email" id="email" required>
          </div>
          <div class="form-block">
            <label for="your_last_name"><%= t "users.full_name" %></label>
            <input type="text" id="your_last_name" required>
          </div>
          <div class="form-block">
            <label for="adress"><%= t "users.address" %></label>
            <input type="text" id="adress" value="Street Address" required>
          </div>
          <div class="form-block">
            <label for="phone"><%= t "users.phone" %></label>
            <input type="text" id="phone" required>
          </div>
          <div class="form-block">
            <label for="phone"><%= t "users.password" %></label>
            <input type="text" id="phone" required>
          </div>
          <div class="form-block">
            <label for="phone"><%= t "users.re_password" %></label>
            <input type="text" id="phone" required>
          </div>
          <div class="form-block">
            <button type="submit" class="btn btn-primary">
              <%= t "users.register" %></button>
          </div>
        </div>
        <div class="col-sm-3"></div>
      </div>
    </form>
  </div>
</div>
