<div class="inner-header">
  <div class="container">
    <div class="pull-left">
      <h6 class="inner-title"><%= t ".categories" %></h6>
    </div>
    <div class="pull-right">
      <div class="beta-breadcrumb font-large">
        <%= link_to t(".home"), root_path %> /
        <span><%= t ".categories" %></span>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
</div>
<div class="container">
  <div id="content">
    <div class="col-sm-12">
      <%= render(partial: "category", collection: @categories,
        as: :category) || t(".no_category") %>
    </div>
    <div class="col-sm-12">
      <%= paginate @categories %>
    </div>
  </div>
</div>
